<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:background="@drawable/background">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="ADD STUDENT"
        android:id="@+id/textView2"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="71dp"
        android:textSize="40dp"
        android:textColor="#07288A" />

    <EditText
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:id="@+id/firstname_input"
        android:hint="Firstname"
        android:layout_marginTop="45dp"
        android:layout_below="@+id/textView2"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2" />

    <EditText
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:id="@+id/lastname_input"
        android:hint="Lastname"
        android:layout_below="@+id/firstname_input"
        android:layout_alignLeft="@+id/firstname_input"
        android:layout_alignStart="@+id/firstname_input" />

    <EditText
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:id="@+id/marks"
        android:hint="Marks"
        android:layout_below="@+id/lastname_input"
        android:layout_alignLeft="@+id/lastname_input"
        android:layout_alignStart="@+id/lastname_input" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ADD"
        android:id="@+id/button_add"
        android:onClick="btn_click"
        android:layout_below="@+id/marks"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="49dp"
        android:background="#8DA8F7" />
</RelativeLayout>